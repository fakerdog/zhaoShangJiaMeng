const app=getApp();

//获取首页展示的数据
function getFristActiveData(cb) {
  wx.showLoading({
    title: '数据加载中...',
    mask: true
  });
  var flag = false;
  wx.request({
    url: app.CDN_URL + 'fristActivityJson.json',
    data: {},
    header: {
      'content-type': 'application/json' // 默认值
    },
    success: function (res) {
      if (typeof cb === "function") {
        cb(res);
      }
    },
    fail: function (res) { },
    complete: function (res) {
      wx.hideLoading();
    }
  });
}
