/* pages/allActives/allActives.wxss */
view,
text{
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
Page{
  padding: 0 20rpx;
  box-sizing: border-box;
}
.zhanwei{
  width: 100vh;
  height: 30rpx;
  background-color: #F0F0F0;
}
.container{
  display: flex;
  flex-direction: column;
}
.item-active{
  display: flex;
  align-items: center;
  height: 220rpx;
  border-bottom:1px solid #F0F0F0;
  border-radius: 15rpx;
}
.image-wrap{
  width: 150rpx;
  height: 150rpx;
}
.actdata-wrap{
  margin-left: 16rpx;
  box-sizing: border-box;
}
.image-wrap image{
  width: 100%;
  height: 100%;
}
.act-name{
  font-size: 32rpx;
  font-weight: 700;
}
.act-count{
  font-size: 30rpx;
  margin: 6rpx 0;
}
.act-havp{
  font-size: 28rpx;
  color: #D2D2D2;
}
