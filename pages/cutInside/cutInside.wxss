page {
    user-select: none;
    width: 100%;
    height: 100%;
    font-family: Arial,Helvetica,sans-serif;
    overflow-x: hidden;
    background-color: #242424;
}

.cropper {
    position: absolute;
    top: 0;
    left: 0;
}

.cropper-wrapper {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.cropper-buttons {
    background-color: rgba(0,0,0,0.95);
    color: #04b00f;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60px;
    line-height: 60px;
}

.cropper-buttons .getCropperImage {
    width: 100%;
    text-align: center;
    font-size: 28px;
}