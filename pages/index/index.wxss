page {
  background-color: #f0f0f0;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.oneday {
  width: 100%;
  height: 100rpx;
  display: flex;
  position: relative;
}

.oneday  view {
  line-height: 100rpx;
  height: 100rpx;
}

.oneday-welfare {
  font-size: 36rpx;
  color: #d15142;
  font-weight: bold;
  height: 100rpx;
  letter-spacing: 3rpx;
}

.oneday-help {
  font-size: 28rpx;
  color: #616161;
  position: absolute;
  right: 0;
  /* width: 200rpx; */
  letter-spacing: 3rpx;
  display: flex;
  align-items: center;
}

button::after{content:"";border: none;}

.oneday-help button {
  background: none;
  border: none;
  font-size: 28rpx;
  color: #616161;
  padding: 0;
  margin-left: 10rpx;
}

.activity {
  border-radius: 15rpx;
  background-color: #ffff;
  margin-bottom: 40rpx;
}

.activity-image-food {
  width: 100%;
  height: 350rpx;
}

.activity-synopsis {
  width: 90%;
  margin: 0 auto;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.activity-synopsis view {
  margin: 15rpx auto;
}

.activity-sponsor {
  color: #d15142;
  font-size: 30rpx;
  font-weight: 600;
}

.activity-prize {
  font-size: 36rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #616161;
}

.container {
  display: flex;
  flex-direction: column;
  background-color: #ffff;
}

.item-active {
  display: flex;
  align-items: center;
  height: 220rpx;
  border-bottom: 1px solid #f0f0f0;
  border-radius: 15rpx;
}

.image-wrap {
  width: 150rpx;
  height: 150rpx;
  margin-left: 16rpx;
}

.actdata-wrap {
  margin-left: 16rpx;
  box-sizing: border-box;
}

.image-wrap image {
  width: 100%;
  height: 100%;
}

.act-name {
  font-size: 32rpx;
  font-weight: 700;
}

.act-count {
  font-size: 30rpx;
  margin: 6rpx 0;
}

.act-havp {
  font-size: 28rpx;
  color: #d2d2d2;
}

.look-all {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 26rpx;
  color: #2d67ad;
}

.contactcustomer {
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 26rpx;
}

button::after {
  content: "";
  border: none;
}

.contactcustomer button {
  background: none;
  border: none;
  height: 200rpx;
  line-height: 200rpx;
}
