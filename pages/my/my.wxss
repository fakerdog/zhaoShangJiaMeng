/* pages/my/my.wxss */
Page{
  background-color: #F0F0F0;
  box-sizing: border-box;
}
view,text{
  background-color: #fff;
  font-size: 32rpx;
  box-sizing: border-box;
}
.zhanwei{
  width: 100%;
  height: 24rpx;
  background-color: #F0F0F0;
}
.namebox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  margin-top: 24rpx;
  padding-bottom: 70rpx;
  padding:0 20rpx;
}
.nameicon {
  width: 18rpx;
  height: 32rpx;
}
.name {
  font-size: 33rpx;
  color: #2f2f2f;
}

.nametext {
  font-size: 33rpx;
  color: #828282;
  float: right;
  padding-right: 25rpx;
  text-align: right;
}
.userAvatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.line1{
  height: 200rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #F0F0F0;
  padding: 0 20rpx;
}
.bianse{
  color: rgba(0, 0, 0,0.7);
}
.username{
  font-size: 32rpx;
  margin-left: 10rpx;
  flex: 1;
}
.rest_bag{
  font-size: 32rpx;
  margin-right: 30rpx;
}
.hongbaolan{
  display: flex;
  height: 96rpx;
  padding: 0 20rpx;
}
.hongbaolan view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.midle-view{
  border-left: 2px solid #F0F0F0;
  border-right: 2px solid #F0F0F0;
}
